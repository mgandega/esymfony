{% extends 'base.html.twig' %} 

{% block body %}

    	<div class="container">
		<div class="row">
  <div class="span3">
                      <div class="well">
		            <ul class="nav nav-list">
		                <li class="nav-header">Nos produits</li>
		                <li class="active">
		                     {%  include "::menuAdmin.html.twig" %}
		                </li>
		                {#
		                      <li class="active">
		                          <a href="index.php">Legumes</a>
		                      </li>
		                      <li>
		                          <a href="index.php">Fruits</a>
		                      </li>
		                  #}
